<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/medium_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/headers_text_size</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/medium_padding</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">@integer/header_font_weight</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/headers_text_size</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">@integer/header_font_weight</item>
    </style>

    <style name="UsualTextStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:paddingVertical">@dimen/large_padding</item>
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight">@integer/text_font_weight</item>
    </style>

    <style name="TrackInfoText">
        <item name="android:textFontWeight">@integer/text_font_weight</item>
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">?attr/colorIcon</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TracksList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">@integer/header_font_weight</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="bottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>
</resources>