<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/medium_padding"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back_icon" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_padding"
            android:text="@string/heading_search"
            android:textColor="?attr/colorOnSecondary" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/small_padding"
        android:background="@drawable/round_rectangle">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/search_icon"
            android:drawablePadding="@dimen/icon_padding"
            android:drawableTint="?attr/colorSecondaryVariant"
            android:fontFamily="@font/ys_text_regular"
            android:hint="@string/heading_search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingVertical="@dimen/icon_padding"
            android:paddingStart="@dimen/small_padding"
            android:paddingEnd="@dimen/Xlarge_padding"
            android:singleLine="true"
            android:textColor="?attr/colorSecondaryVariant"
            android:textColorHint="?attr/colorSecondaryVariant"
            android:textFontWeight="400"
            android:textSize="@dimen/large_text_size" />

        <ImageView
            android:id="@+id/clear_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/small_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/clear_icon"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/placeholder_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="102dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/placeholder_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/empty_text"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/large_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/placeholder_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="102dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/placeholder_network" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/network_error_heading"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_horizontal"
            android:text="@string/network_error_text"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/large_text_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="24dp"
            android:backgroundTint="?attr/colorOnSecondary"
            android:fontFamily="@font/ys_text_medium"
            android:insetBottom="0dp"
            android:text="@string/update_text"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            android:textFontWeight="@integer/text_font_weight"
            app:cornerRadius="54dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>